<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">
    <item>
        <selector>
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <gradient
                                android:startColor="#0A84FF"
                                android:endColor="#007AFF"
                                android:angle="270" />
                            <corners android:radius="6dp" />
                            <stroke android:width="1dp" android:color="#0056CC" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            
            <!-- Normal state -->
            <item>
                <layer-list>
                    <!-- Shadow -->
                    <item android:top="1dp" android:left="1dp">
                        <shape android:shape="rectangle">
                            <solid android:color="#0A000000" />
                            <corners android:radius="10dp" />
                        </shape>
                    </item>
                    <!-- Main button -->
                    <item android:bottom="1dp" android:right="1dp">
                        <shape android:shape="rectangle">
                            <gradient
                                android:startColor="#007AFF"
                                android:endColor="#0056CC"
                                android:angle="270" />
                            <corners android:radius="6dp" />
                            <stroke android:width="1dp" android:color="#004499" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple> 