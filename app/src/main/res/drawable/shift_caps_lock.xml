<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1A0084FF" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#00A8FF"
                        android:endColor="#0084FF"
                        android:angle="270" />
                    <corners android:radius="10dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#20B8FF" />
                </shape>
            </item>
            <!-- Inner glow for caps lock -->
            <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#40C8FF" />
                    <corners android:radius="7dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple> 