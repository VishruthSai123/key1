<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Dark gradient background for input area -->
    <gradient
        android:angle="135"
        android:startColor="#2A2A2A"
        android:centerColor="#3D3D40"
        android:endColor="#2E2E2E"
        android:type="linear" />
    
    <!-- Enhanced border -->
    <stroke
        android:width="2dp"
        android:color="#5AB7FF" />
    
    <!-- Rounded corners -->
    <corners android:radius="14dp" />
    
</shape> 